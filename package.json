{
  "name": "@nivalis/eslint-config",
  "type": "module",
  "version": "4.2.1",
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
  "description": "ESLint shareable flat config used at Nivalis Studio",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "shareable config",
    "flat config"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "pnpm dlx @eslint/config-inspector --config eslint.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "prepack": "unbuild",
    "ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.15.0"
  },
  "prettier": "@nivalis/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.1",
    "@next/eslint-plugin-next": "15.1.4",
    "@stylistic/eslint-plugin": "2.12.1",
    "@typescript-eslint/parser": "8.19.1",
    "@typescript-eslint/utils": "8.19.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-flat-config-utils": "1.0.0",
    "eslint-plugin-import-x": "4.6.1",
    "eslint-plugin-jsdoc": "50.6.1",
    "eslint-plugin-jsonc": "2.18.2",
    "eslint-plugin-n": "17.15.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.3",
    "eslint-plugin-react-compiler": "19.0.0-beta-63e3235-20250105",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-regexp": "2.7.0",
    "eslint-plugin-tailwindcss": "3.17.5",
    "eslint-plugin-unicorn": "56.0.1",
    "globals": "15.14.0",
    "local-pkg": "1.0.0",
    "typescript-eslint": "8.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@nivalis/prettier-config": "3.4.2",
    "@types/node": "22.10.5",
    "eslint": "9.18.0",
    "lefthook": "1.10.3",
    "lint-staged": "15.3.0",
    "typescript": "5.7.3",
    "unbuild": "3.2.0"
  },
  "unbuild": {
    "declaration": true,
    "failOnWarn": false,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  },
  "lint-staged": {
    "*": "eslint --fix --no-warn-ignored"
  }
}
