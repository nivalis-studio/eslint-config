{
  "name": "@nivalis/eslint-config",
  "type": "module",
  "version": "5.8.1",
  "packageManager": "pnpm@10.30.3",
  "description": "ESLint shareable flat config used at Nivalis Studio",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "shareable config",
    "flat config"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "pnpm dlx @eslint/config-inspector --config eslint.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsdown",
    "prepublishOnly": "tsdown",
    "ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.29.0"
  },
  "prettier": "@nivalis/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.6.0",
    "@eslint/core": "^1.1.0",
    "@next/eslint-plugin-next": "16.1.6",
    "@stylistic/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "8.56.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-flat-config-utils": "3.0.1",
    "eslint-plugin-better-tailwindcss": "4.3.1",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "62.7.1",
    "eslint-plugin-jsonc": "3.1.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-n": "17.24.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-regexp": "3.0.0",
    "eslint-plugin-sonarjs": "4.0.0",
    "eslint-plugin-unicorn": "63.0.0",
    "globals": "17.3.0",
    "local-pkg": "1.1.2",
    "typescript-eslint": "8.56.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@nivalis/prettier-config": "3.8.1",
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/node": "24.2.1",
    "eslint": "9.38.0",
    "lefthook": "2.1.1",
    "tsdown": "0.20.3",
    "typescript": "5.9.3"
  }
}
