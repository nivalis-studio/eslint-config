{
  "name": "@nivalis/eslint-config",
  "type": "module",
  "version": "2.6.1",
  "packageManager": "pnpm@9.0.1",
  "description": "ESLint shareable flat config used at Nivalis Studio",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "shareable config",
    "flat config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "nr typegen && tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "watch": "tsup --format esm,cjs --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "typegen": "esno scripts/typegen.ts",
    "prepack": "nr build",
    "release": "bumpp && pnpm publish",
    "test": "exit 0",
    "typecheck": "tsc --noEmit",
    "ts": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@unocss/eslint-plugin": ">=0.59.3",
    "astro-eslint-parser": "^0.17.0",
    "eslint": ">=8.57.0",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-format": ">=0.1.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-solid": "^0.13.2",
    "eslint-plugin-svelte": ">=2.35.1",
    "prettier-plugin-astro": "^0.13.0",
    "svelte-eslint-parser": "^0.34.1"
  },
  "peerDependenciesMeta": {
    "@graphql-eslint/eslint-plugin": {
      "optional": true
    },
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "astro-eslint-parser": {
      "optional": true
    },
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "eslint-plugin-no-only-tests": {
      "optional": true
    },
    "eslint-plugin-solid": {
      "optional": true
    },
    "eslint-plugin-svelte": {
      "optional": true
    },
    "eslint-plugin-vitest": {
      "optional": true
    },
    "prettier-plugin-astro": {
      "optional": true
    },
    "svelte-eslint-parser": {
      "optional": true
    }
  },
  "prettier": "@nivalis/prettier-config",
  "dependencies": {
    "@next/eslint-plugin-next": "14.2.3",
    "@stylistic/eslint-plugin": "1.7.2",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint-config-flat-gitignore": "0.1.5",
    "eslint-flat-config-utils": "^0.2.4",
    "eslint-merge-processors": "0.1.0",
    "eslint-plugin-antfu": "2.1.2",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import-x": "0.5.0",
    "eslint-plugin-jsdoc": "48.2.3",
    "eslint-plugin-jsonc": "2.15.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-markdown": "4.0.1",
    "eslint-plugin-n": "17.3.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-perfectionist": "2.10.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.6",
    "eslint-plugin-tailwindcss": "3.15.1",
    "eslint-plugin-toml": "0.11.0",
    "eslint-plugin-unicorn": "52.0.0",
    "eslint-plugin-unused-imports": "3.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-yml": "1.14.0",
    "globals": "15.0.0",
    "jsonc-eslint-parser": "2.4.0",
    "local-pkg": "0.5.0",
    "parse-gitignore": "2.0.0",
    "prettier": "3.2.5",
    "toml-eslint-parser": "0.9.3",
    "yaml-eslint-parser": "1.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-plugin-prettier": "5.0.1-1",
    "@antfu/ni": "0.21.12",
    "@eslint/config-inspector": "0.4.7",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@nivalis/eslint-config": "workspace:*",
    "@nivalis/prettier-config": "^3.2.5",
    "@stylistic/eslint-plugin-migrate": "1.7.2",
    "@types/eslint": "8.56.10",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.12.7",
    "@types/prompts": "2.4.9",
    "@unocss/eslint-plugin": "0.59.4",
    "astro-eslint-parser": "1.0.1",
    "bumpp": "9.4.0",
    "bundle-require": "^4.0.3",
    "eslint": "8.57.0",
    "eslint-plugin-astro": "0.34.0",
    "eslint-plugin-format": "0.1.1",
    "eslint-plugin-solid": "^0.13.2",
    "eslint-plugin-svelte": "2.38.0",
    "eslint-typegen": "0.2.4",
    "esno": "4.7.0",
    "execa": "8.0.1",
    "fast-glob": "3.3.2",
    "fs-extra": "11.2.0",
    "lint-staged": "15.2.2",
    "prettier-plugin-astro": "0.13.0",
    "simple-git-hooks": "2.11.1",
    "svelte": "4.2.15",
    "svelte-eslint-parser": "0.35.0",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "vitest": "1.5.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --no-warn-ignored"
  }
}
