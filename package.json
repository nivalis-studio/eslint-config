{
	"name": "@nivalis/eslint-config",
	"type": "module",
	"version": "2.0.0-beta.2",
	"packageManager": "pnpm@8.15.1",
	"description": "ESLint shareable flat config used at Nivalis Studio",
	"license": "MIT",
	"homepage": "https://github.com/nivalis-studio/eslint-config#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nivalis-studio/eslint-config.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/eslint-config/issues"
	},
	"keywords": [
		"eslint-config",
		"eslint",
		"shareable config",
		"flat config"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup --format esm,cjs --clean --dts",
		"stub": "tsup --format esm",
		"dev": "tsup --format esm,cjs --watch & eslint-flat-config-viewer",
		"watch": "tsup --format esm,cjs --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepack": "nr build",
		"release": "bumpp && pnpm publish",
		"test": "exit 0",
		"ts": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"peerDependencies": {
		"eslint": "8.56.0",
		"eslint-plugin-format": ">=0.1.0",
		"eslint-plugin-no-only-tests": "^3.1.0",
		"eslint-plugin-vitest": "^0.3.21"
	},
	"peerDependenciesMeta": {
		"eslint-plugin-format": {
			"optional": true
		},
		"eslint-plugin-no-only-tests": {
			"optional": true
		},
		"eslint-plugin-vitest": {
			"optional": true
		}
	},
	"dependencies": {
		"@antfu/eslint-define-config": "^1.23.0-2",
		"@antfu/install-pkg": "^0.3.1",
		"@eslint-types/jsdoc": "46.8.2-1",
		"@eslint-types/typescript-eslint": "^6.19.1",
		"@eslint-types/unicorn": "^50.0.1",
		"@graphql-eslint/eslint-plugin": "3.20.1",
		"@next/eslint-plugin-next": "^14.1.0",
		"@stylistic/eslint-plugin": "^1.5.4",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"eslint-config-flat-gitignore": "^0.1.2",
		"eslint-merge-processors": "^0.1.0",
		"eslint-plugin-antfu": "^2.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-i": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.0.4",
		"eslint-plugin-jsonc": "^2.13.0",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-markdown": "^3.0.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-perfectionist": "^2.5.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"eslint-plugin-tailwindcss": "3.14.2",
		"eslint-plugin-toml": "^0.9.2",
		"eslint-plugin-unicorn": "^50.0.1",
		"eslint-plugin-unused-imports": "^3.0.0",
		"eslint-plugin-yml": "1.12.2",
		"globals": "13.24.0",
		"jsonc-eslint-parser": "^2.4.0",
		"local-pkg": "^0.5.0",
		"parse-gitignore": "^2.0.0",
		"toml-eslint-parser": "^0.9.3",
		"yaml-eslint-parser": "^1.2.2"
	},
	"devDependencies": {
		"@antfu/eslint-plugin-prettier": "^5.0.1-1",
		"@antfu/ni": "^0.21.12",
		"@nivalis/eslint-config": "workspace:*",
		"@stylistic/eslint-plugin-migrate": "^1.5.4",
		"@types/eslint": "^8.56.2",
		"@types/node": "20.11.16",
		"@types/prompts": "^2.4.9",
		"bumpp": "^9.3.0",
		"eslint": "npm:eslint-ts-patch@^8.56.0-0",
		"eslint-plugin-format": "^0.1.0",
		"eslint-ts-patch": "^8.56.0-0",
		"esno": "^4.0.0",
		"execa": "^8.0.1",
		"fast-glob": "^3.3.2",
		"lint-staged": "^15.2.1",
		"simple-git-hooks": "^2.9.0",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
