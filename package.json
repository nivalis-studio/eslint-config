{
  "name": "@nivalis/eslint-config",
  "type": "module",
  "version": "2.8.0",
  "packageManager": "pnpm@9.1.2",
  "description": "ESLint shareable flat config used at Nivalis Studio",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "shareable config",
    "flat config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "nr typegen && tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "watch": "tsup --format esm,cjs --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "typegen": "esno scripts/typegen.ts",
    "prepack": "nr build",
    "release": "bumpp && pnpm publish",
    "test": "exit 0",
    "typecheck": "tsc --noEmit",
    "ts": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "eslint": ">=8.57.0",
    "eslint-plugin-format": ">=0.1.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-solid": "^0.13.2",
    "eslint-plugin-svelte": ">=2.35.1",
    "svelte-eslint-parser": "^0.33.0"
  },
  "peerDependenciesMeta": {
    "@graphql-eslint/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "eslint-plugin-no-only-tests": {
      "optional": true
    },
    "eslint-plugin-solid": {
      "optional": true
    },
    "eslint-plugin-svelte": {
      "optional": true
    },
    "eslint-plugin-vitest": {
      "optional": true
    },
    "svelte-eslint-parser": {
      "optional": true
    }
  },
  "prettier": "@nivalis/prettier-config",
  "dependencies": {
    "@next/eslint-plugin-next": "14.2.4",
    "@stylistic/eslint-plugin": "2.1.0",
    "@typescript-eslint/eslint-plugin": "7.13.0",
    "@typescript-eslint/parser": "7.13.0",
    "eslint-config-flat-gitignore": "0.1.5",
    "eslint-flat-config-utils": "^0.2.5",
    "eslint-merge-processors": "0.1.0",
    "eslint-plugin-antfu": "2.3.3",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import-x": "0.5.1",
    "eslint-plugin-jsdoc": "48.2.12",
    "eslint-plugin-jsonc": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-markdown": "5.0.0",
    "eslint-plugin-n": "17.9.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-perfectionist": "2.10.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.2.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-compiler": "0.0.0-experimental-c8b3f72-20240517",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.7",
    "eslint-plugin-tailwindcss": "3.17.3",
    "eslint-plugin-toml": "0.11.0",
    "eslint-plugin-unicorn": "53.0.0",
    "eslint-plugin-unused-imports": "3.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-yml": "1.14.0",
    "globals": "15.4.0",
    "jsonc-eslint-parser": "2.4.0",
    "local-pkg": "0.5.0",
    "parse-gitignore": "2.0.0",
    "prettier": "3.3.2",
    "toml-eslint-parser": "0.9.3",
    "yaml-eslint-parser": "1.2.3"
  },
  "devDependencies": {
    "@antfu/eslint-plugin-prettier": "5.0.1-1",
    "@antfu/ni": "0.21.12",
    "@eslint/config-inspector": "0.4.11",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@nivalis/eslint-config": "workspace:*",
    "@nivalis/prettier-config": "^3.3.2",
    "@stylistic/eslint-plugin-migrate": "2.1.0",
    "@types/eslint": "8.56.10",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.14.2",
    "@types/prompts": "2.4.9",
    "bumpp": "9.4.1",
    "bundle-require": "^4.2.1",
    "eslint": "8.57.0",
    "eslint-plugin-format": "0.1.1",
    "eslint-plugin-solid": "^0.14.0",
    "eslint-plugin-svelte": "2.39.0",
    "eslint-typegen": "0.2.4",
    "esno": "4.7.0",
    "execa": "9.1.0",
    "fast-glob": "3.3.2",
    "fs-extra": "11.2.0",
    "lint-staged": "15.2.7",
    "simple-git-hooks": "2.11.1",
    "svelte": "4.2.17",
    "svelte-eslint-parser": "^0.33.0",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --no-warn-ignored"
  }
}
