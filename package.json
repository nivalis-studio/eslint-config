{
  "name": "@nivalis/eslint-config",
  "type": "module",
  "version": "5.1.3",
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "description": "ESLint shareable flat config used at Nivalis Studio",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "shareable config",
    "flat config"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "pnpm dlx @eslint/config-inspector --config eslint.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "prepack": "unbuild",
    "ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.21.0"
  },
  "prettier": "@nivalis/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.1",
    "@next/eslint-plugin-next": "15.2.4",
    "@stylistic/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "8.29.1",
    "eslint-config-prettier": "10.1.1",
    "eslint-flat-config-utils": "2.0.1",
    "eslint-plugin-import-x": "4.10.2",
    "eslint-plugin-jsdoc": "50.6.9",
    "eslint-plugin-jsonc": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-n": "17.17.0",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-compiler": "19.0.0-beta-aeaed83-20250323",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-regexp": "2.7.0",
    "eslint-plugin-sonarjs": "3.0.2",
    "eslint-plugin-tailwindcss": "3.18.0",
    "eslint-plugin-unicorn": "58.0.0",
    "globals": "16.0.0",
    "local-pkg": "1.1.1",
    "typescript-eslint": "8.29.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@nivalis/prettier-config": "3.5.3",
    "@types/eslint-plugin-jsx-a11y": "6.10.0",
    "@types/node": "22.14.0",
    "eslint": "9.24.0",
    "lefthook": "1.11.7",
    "lint-staged": "15.5.0",
    "typescript": "5.8.3",
    "unbuild": "3.5.0"
  },
  "unbuild": {
    "declaration": true,
    "failOnWarn": false,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  },
  "lint-staged": {
    "*": "eslint --fix --no-warn-ignored"
  }
}
